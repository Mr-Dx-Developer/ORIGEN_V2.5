{
  "compilerOptions": {
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,

    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ES2020",
    "types": ["@citizenfx/server", "@types/node"],
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "paths": {
      "@shared/*": ["../shared/*"],
    }
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules", "**/__tests__/*"]
}